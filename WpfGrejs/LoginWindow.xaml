<Window x:Class="WpfGrejs.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfGrejs"
        mc:Ignorable="d"
        Background="#171717"
        Title="LoginWindow" Height="450" Width="300">
    
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" /> <!-- For the header and input area -->
            <RowDefinition Height="75" /> <!-- Username -->
            <RowDefinition Height="75" />  <!-- Password -->
            <RowDefinition Height="30" />
            <RowDefinition Height="*" /> 
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Foreground="White" FontSize="48" HorizontalAlignment="Center">Login</Label>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Foreground="White" FontSize="18">Username:</Label>
            <TextBox Grid.Row="1" MaxHeight="30" VerticalAlignment="Top" FontSize="18" />
        </Grid>
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Foreground="White" FontSize="18">Password:</Label>
            <PasswordBox Grid.Row="1" MaxHeight="30" VerticalAlignment="Top" FontSize="18" />
        </Grid>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Background="RoyalBlue" FontWeight="SemiBold">Login</Button>
            <Button Grid.Column="2">Signup</Button>
        </Grid>
    </Grid>
</Window>
