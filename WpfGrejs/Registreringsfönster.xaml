<Window x:Class="WpfGrejs.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registration" Height="500" Width="300" Background="#171717">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="75" />
            <RowDefinition Height="75" />  
            <RowDefinition Height="75" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Foreground="White" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Content="Signup" />
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Foreground="White" FontSize="16" Content="Användarnamn:" />
            <TextBox Name="UsernameTextBox" Grid.Row="1" MaxHeight="30" FontSize="14" Margin="0,5,0,0" />
        </Grid>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Foreground="White" FontSize="16" Content="Lösenord:" />
            <PasswordBox Name="PasswordBox" Grid.Row="1" MaxHeight="30" FontSize="14" Margin="0,5,0,0" />
        </Grid>
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Foreground="White" FontSize="16" Content="Bekräfta Lösenord:" />
            <PasswordBox Name="ConfirmPasswordBox" Grid.Row="1" MaxHeight="30" FontSize="14" Margin="0,5,0,0" />
        </Grid>
        <Button Grid.Row="4" Name="RegisterButton" Content="Registrera" Background="RoyalBlue" Foreground="White" FontWeight="Bold" FontSize="16" Click="RegisterButton_OnClick" Margin="0,10,0,0" />
    </Grid>
</Window>